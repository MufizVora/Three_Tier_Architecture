<!-- Banner Section Begin -->
<style>
    .banner__item {
        width: 100%;
        height: 300px; /* Set a fixed height for all category items */
        overflow: hidden; /* Hide any overflowing content */
        position: relative;
        border: 1px solid #e5e5e5; /* Add a border to the category item */
    }

        .banner__item:hover .banner__item__pic img {
            transform: scale(1.1); /* Scale the image on hover */
        }

    .banner__item__pic {
        height: 100%; /* Ensure the image fills the entire height of its container */
        overflow: hidden; /* Hide any overflowing content */
    }

        .banner__item__pic img {
            width: 100%; /* Ensure the image fills the entire width of its container */
            height: auto; /* Maintain aspect ratio */
            transition: transform 0.5s ease; /* Add transition for smooth scaling */
        }

    .banner__item__text {
        position: absolute;
        bottom: 20px; /* Adjust the distance from the bottom */
        width: 100%; /* Make the text span the entire width */
        background-color: rgba(255, 255, 255, 0.8); /* Add a semi-transparent background to improve text readability */
        padding: 10px; /* Add padding to the text */
        box-sizing: border-box; /* Include padding in the width calculation */
    }

    .banner__item__text h5 {
        font-weight: bold; /* Make the category name bold */
    }

        .our-products-title {
        text-align: center; /* Center align the title */
        margin-bottom: 30px; /* Add some bottom margin for spacing */
        color: #333; /* Set text color */
        position: relative; /* Position relative for hover animation */
        cursor: pointer; /* Set cursor to pointer for interactive feel */
    }
    .our-products-title::after {
        content: ''; /* Add content for pseudo-element */
        position: absolute; /* Position absolute for overlay */
        bottom: -5px; /* Adjust position as needed */
        left: 50%; /* Align to center */
        transform: translateX(-50%); /* Center horizontally */
        width: 0%; /* Set initial width of underline */
        height: 2px; /* Set height of underline */
        background-color: #333; /* Set color of underline */
        transition: width 0.3s ease; /* Add transition effect */
    }
    .our-products-title:hover::after {
        width: 100%; /* Set width to 100% on hover */
        transition: width 0.3s ease; /* Add transition effect */
        animation-name: shake; /* Apply shake animation on hover */
        animation-duration: 0.5s; /* Set duration of animation */
    }
    keyframes shake {
        0% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        100% { transform: translateX(-5px); }
    }

</style>
<!-- Banner Section Start -->
<section class="banner spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="our-products-title">Our Categories</h2>
            </div>
            @foreach (var category in ViewBag.category)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="banner__item text-center">
                        <div class="banner__item__pic">
                            <img src="/categoryuploads/@category.File" alt="@category.CategoryName" class="img-fluid rounded">
                        </div>
                        <div class="banner__item__text">
                            <h5>@category.CategoryName</h5>
                            <a href="@Url.Action("CategoryWiseProduct", "User", new { categoryId = category.Id })" class="btn btn-primary mt-2">Shop now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Banner Section End -->

<!-- Product Section Begin -->
<style>

    .product.spad {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product__filter {
        width: 24%; /* Adjust the width of each product item as needed */
        margin-bottom: 20px; /* Add some margin between product items */
    }

        .our-products-title {
        text-align: center; /* Center align the title */
        margin-bottom: 30px; /* Add some bottom margin for spacing */
        color: #333; /* Set text color */
        position: relative; /* Position relative for hover animation */
        cursor: pointer; /* Set cursor to pointer for interactive feel */
    }
    .our-products-title::after {
        content: ''; /* Add content for pseudo-element */
        position: absolute; /* Position absolute for overlay */
        bottom: -5px; /* Adjust position as needed */
        left: 50%; /* Align to center */
        transform: translateX(-50%); /* Center horizontally */
        width: 0%; /* Set initial width of underline */
        height: 2px; /* Set height of underline */
        background-color: #333; /* Set color of underline */
        transition: width 0.3s ease; /* Add transition effect */
    }
    .our-products-title:hover::after {
        width: 100%; /* Set width to 100% on hover */
        transition: width 0.3s ease; /* Add transition effect */
        animation-name: shake; /* Apply shake animation on hover */
        animation-duration: 0.5s; /* Set duration of animation */
    }
    
    keyframes shake {
        0% { transform: translateX(-5px); }
        50% { transform: translateX(5px); }
        100% { transform: translateX(-5px); }
    }

</style>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="our-products-title">Our Products</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var product in ViewBag.product)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="/productuploads/@product.File">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="#"><img src="/userassets/img/icon/heart.png" alt=""></a></li>
                                <li><a href="#"><img src="/userassets/img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                <li><a href="/User_Web/Pages/Index?slug=@product.Slug"><img src="/userassets/img/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>@product.ProductName</h6>
                            <a href="#" class="add-cart">+ Add To Cart</a>
                            <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>₹@product.ProductPrice</h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Product Section End -->

