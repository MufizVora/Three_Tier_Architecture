@model IEnumerable<Data_Access_Layer.Models.SneatCategory.Category>


@{
    ViewData["Title"] = "Category | Sneat";
}

<style>
    h1 {
        text-align: center;
        color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
    }

    .table-container {
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table img {
            max-width: 100px;
            max-height: 100px;
            border-radius: 5px;
        }

    .btn-actions {
        display:grid;
        gap: 5px;
    }
</style>

<h1>Category List</h1>

<p>
    <a class="btn btn-primary" asp-action="CreateCategory">Add New Category</a>
</p>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Category Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>
                        <img src="~/categoryuploads/@item.File" alt="Product Image" />
                    </td>
                    <td class="btn-actions">
                        <a class="btn btn-info" asp-action="DetailCategory" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning" asp-action="EditCategory" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>