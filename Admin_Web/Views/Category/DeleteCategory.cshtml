@model Data_Access_Layer.Models.SneatCategory.Category

@{
    ViewData["Title"] = "DeleteCategory | Sneat";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1, h3 {
            color: solid black;
            text-align: center;
        }

        .row {
            margin-bottom: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
            margin-bottom: 10px;
        }

        .col-sm-10 {
            margin-bottom: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn, a {
            text-decoration: none;
            color: #fff;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
        }

        .btn {
            cursor: pointer;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .back-link {
            display: inline-block;
            margin-top: 20px;
        }

            .back-link a {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Delete Category</h1>
        <h3>Are you sure you want to delete this?</h3>
        <hr />
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    Image
                </dt>
                <dd class="col-sm-10">
                    <img src="~/categoryuploads/@Model.File" alt="Image" width="100" height="100" />
                </dd>
            </dl>

            <form asp-action="DeleteCategory">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <span class="back-link"><a href="@Url.Action("ListCategory")">Back to List</a></span>
            </form>
        </div>
    </div>

    <!-- JavaScript code (if needed) -->
    <script>
        // You can add JavaScript code here if needed
    </script>
</body>
</html>
