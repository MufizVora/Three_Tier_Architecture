@model Data_Access_Layer.Models.SneatAdmin.Admin

@{
    Layout = null;
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">

<style>
    .form-gap {
        padding-top: 70px;
    }
</style>

<title> ForgotPassowrd | Sneat </title>
<div class="form-gap"></div>
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center">
                        <h3><i class="fa fa-lock fa-4x"></i></h3>
                        <h2 class="text-center">Forgot Password?</h2>
                        <p>You can reset your password here.</p>
                        <div class="panel-body">

                            <form id="register-form" role="form" autocomplete="off" class="form" method="post" asp-action="ForgotPassword">

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="email" type="email" name="email" asp-for="Email" placeholder="Enter Your Email Address Here" class="form-control">
                                    </div>
                                </div>

                                <p>@ViewBag.Message</p>

                                <div class="form-group">
                                    <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="ForgotPassword" type="submit">
                                </div>
                                <input type="hidden" class="hide" name="token" id="token">
                            </form>
                            <div class="col-12">
                                <p class="small mb-0">Remember Password? <a href="/Admin/Admin_Login">Login to your account</a></p>
                            </div>
                            <div class="col-12">
                                <p class="small mb-0">Want to go back on dashboard? <a href="/Home/Index">Go back to dashboard</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>