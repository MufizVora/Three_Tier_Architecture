@model Data_Access_Layer.Models.SneatAdmin.Admin

@{
    Layout = null;
}

<style>
    .reset_password_form {
        width: 600px;
        border: 1px solid #ddd;
        padding: 50px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        box-shadow: 0px 3px 6px #dedede;
        transition: box-shadow .1s ease;
        &:hover{

        box-shadow: 0px 6px 12px #dedede;
    }

    .message {
        text-align: center;
        font-size: 14px;
        margin-bottom: 15px;
    }

    .message_success {
        color: #4FB973;
    }

    .form_title {
        color: #065FB8;
        text-align: center;
        margin-bottom: 50px;
        h3{
        font-size: 16px !important;
    }
   }

    .form-group {
        margin-bottom: 50px;
        text-align: center;
        label{
        margin-bottom: 10px;
        font-size: 14px;
        font-weight: normal;
        color: #464646;
    }
    input {
        width: 280px;
        margin: auto;
        border-radius: 0;
        box-shadow: none;
    }
    margin-bottom: 30px;
 }
 button.form_btn {
        display: block;
        margin: auto;
        margin-bottom: 10px;
        border: 1px solid #bbb;
        border-radius: 0;
        width: 200px;
        font-weight: normal;
        background-color: #065FB8;
        color: #fff;
        font-size: 14px;
        transition: all .3s ease;
        &:hover{
        background-color: #fff;
        color: #065FB8;
        box-shadow: 0 3px 6px #dedede;
    }
   }

    .back_link {
        text-align: center;
        a

    {
        text-decoration: none;
        color: #95989A;
        font-size: 12px;
        i

    {
        color: #065FB8;
        padding: 5px;
    }
    }
 }
}
</style>

<div class="reset_password_form">

    <form method="post" asp-action="ResetPassword">
        <div class="form_title">
            <h3>Reset Your Password Here</h3>
        </div>

        <div class="form-group">
            <label for="new_password">New Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Enter Your New Password Here">
        </div>

        <div class="form-group">
        <input type="hidden" value="@ViewBag.Token" name="ResetToken" class="form-control" />
        </div>

        <button type="submit" class="btn btn-default form_btn" value="ResetPassword">Reset Password</button>

        <div class="back_link">
            <span>Reset link expired?</span><a href="/Admin/ForgotPassword">Get new reset link here</a>
        </div>
    </form>
</div>